{
  "name": "mini-diarium",
  "version": "0.3.0",
  "description": "A modern, encrypted, local-first desktop journaling application",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "pre-commit": "node scripts/pre-commit.js",
    "check": "node scripts/quick-check.js",
    "diagrams": "mmdc -i docs/diagrams/unlock.mmd -o docs/diagrams/unlock.svg && mmdc -i docs/diagrams/unlock-dark.mmd -o docs/diagrams/unlock-dark.svg --backgroundColor transparent && mmdc -i docs/diagrams/save-entry.mmd -o docs/diagrams/save-entry.svg && mmdc -i docs/diagrams/save-entry-dark.mmd -o docs/diagrams/save-entry-dark.svg --backgroundColor transparent && mmdc -i docs/diagrams/context.mmd -o docs/diagrams/context.svg && mmdc -i docs/diagrams/context-dark.mmd -o docs/diagrams/context-dark.svg --backgroundColor transparent && d2 docs/diagrams/architecture.d2 docs/diagrams/architecture.svg && d2 docs/diagrams/architecture-dark.d2 docs/diagrams/architecture-dark.svg",
    "test:e2e": "wdio run wdio.conf.ts",
    "test:e2e:local": "node scripts/e2e-local.js"
  },
  "license": "MIT",
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "lucide-solid": "^0.575.0",
    "solid-js": "^1.9.11"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@wdio/cli": "^9",
    "@wdio/local-runner": "^9",
    "@wdio/mocha-framework": "^9",
    "@wdio/spec-reporter": "^9",
    "@wdio/types": "^9",
    "@eslint/js": "^10.0.1",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@solidjs/testing-library": "^0.8.10",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@unocss/reset": "^66.6.0",
    "@unocss/vite": "^66.6.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-solid": "^0.14.5",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "unocss": "^66.6.0",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^4.0.18",
    "webdriverio": "^9"
  }
}
