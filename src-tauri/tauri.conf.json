{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mini Diarium",
  "version": "0.4.2",
  "identifier": "com.minidiarium",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mini Diarium",
        "width": 800,
        "height": 660,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self' data:; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "PLACEHOLDER_PUBLIC_KEY",
      "endpoints": [
        "https://github.com/fjrevoredo/mini-diarium/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "nsis", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright (c) 2026 Francisco J. Revoredo",
    "category": "Productivity",
    "shortDescription": "An encrypted, local-first desktop journaling app",
    "longDescription": "Mini Diarium is a privacy-focused desktop journaling application. All diary entries are encrypted with AES-256-GCM at rest. Features include rich text editing, calendar navigation, import/export, automatic backups, and optional in-app update checks. No telemetry, no automatic network calls. Your journal stays on your device.",
    "licenseFile": "../LICENSE",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1"
        ]
      }
    }
  }
}
